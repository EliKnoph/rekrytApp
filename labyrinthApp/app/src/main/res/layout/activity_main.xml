<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.btapp.BTMainActivity"
    android:background="@drawable/bakgrund">

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-210dp"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:text="Press START and move around the phone to steer the labyrinth. Make sure the ball doesn't fall down a hole."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="132dp"
        android:layout_height="92dp"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:text="START"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ITButton"
        android:layout_width="40dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="136dp"
        android:layout_marginTop="122dp"
        android:visibility="invisible"
        android:layout_marginRight="136dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>